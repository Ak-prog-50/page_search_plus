{
    "manifest_version": 3,
    "name": "Page Search Plus",
    "version": "1.0",
    "description": "Enhanced in-page search functionality",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "index.html",
      "default_icon": {
        "16": "assets/favicon.ico",
        "512": "assets/logo.png"
      }
    },
    "content_scripts": [
        {
          "js": ["scripts/content.js"],
          "matches": ["<all_urls>"]
        }
    ],
    "background": {
        "service_worker": "scripts/background.js"
      }
  }
  